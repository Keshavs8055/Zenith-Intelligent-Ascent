{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@zenith/types": ["packages/types/src"],
      "@zenith/utils": ["packages/utils/src"],
      "@zenith/ai": ["packages/ai/src"],
      "@zenith/ui": ["packages/ui/src"]
    }
  }
}
